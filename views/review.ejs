<%  layout("/layouts/boilerplate.ejs") %>


<div class="row ">
    <div class="col-8 offset-2 mt-3 ">
    <div class="card col-8 offset-2 show-card listing-card">
        <b> <%= listing.title %></b> 
        <img src=" <%= listing.image.url %> " class="card-img-top show-img" alt="Listing">
      <div class="card-body">
        <p class="card-text">
            
            <%= listing.description%> <br> 
            &#8377;<%= listing.price.toLocaleString("en-IN")%> <br>
            <%= listing.country %> <br>
            <%= listing.location %> </p>
      </div> 
    </div>
   
    
</div>
<% if(currUser) {%>
<div class="col-8 offset-3 mt-2  mb-2 review ">
   
    <h4 class="mt-2">Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate  >
        <div class="mt-2 " >
            <label for="rating">Rating</label>
            <input type="range"
             name="review[rating]"
              min="1" max="5" 
              id="rating" 
               class="form-range" required>
        </div>
        <div  class="mt-2">
            <label for="comment"  class="form-label">Comment</label>
            <textarea name="review[comment]" 
            
            id="comment" 
            class="form-control border-dark" 
            cols="20"  rows="5" 
            required></textarea>
            <div class="invalid-feedback">
                comment is required
            </div>
        </div>
        <button class="
      btn  btn-outline-dark mt-2 mb-2" >Submit </button>
    </form>
</div> 
<%}%>


<div class="offset-2">
    <p><b> All Rating</b></p>
    <div class="row  ">
      <%listing.reviews.forEach(review => { %>
   <div class="card col-5  mb-3 ms-2">
     
          <div class="card-body">
            <h5 class="card-title"> @<%= review.author ? review.author.username : "Unknown User" %></h5>

          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> stars</p>
      </div>
      <form action="/listings/<%=listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark mb-2">Delete Review</button>
      </form>
  </div>
 
  <% }); %> 
   </div>
</div>

</div>